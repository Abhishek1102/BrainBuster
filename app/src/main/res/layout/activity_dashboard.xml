<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DashboardActivity">

    <FrameLayout
        android:id="@+id/frame_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/lv_nav"/>

    <LinearLayout
        android:id="@+id/lv_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingTop="@dimen/_5sdp">

        <LinearLayout
            android:id="@+id/lv_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_3sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_home_nav"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/home_nav"/>

            <com.example.brainbuster.customfont.CustomTextViewMedium
                android:id="@+id/tv_home_nav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home"
                style="@style/gray_9"
                android:includeFontPadding="false"/>
            
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lv_favourites"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_3sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_favourites_nav"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/heart_nav"/>

            <com.example.brainbuster.customfont.CustomTextViewMedium
                android:id="@+id/tv_favourites_nav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/favourites"
                style="@style/gray_9"
                android:includeFontPadding="false"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lv_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_3sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_profile_nav"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/user_nav"/>

            <com.example.brainbuster.customfont.CustomTextViewMedium
                android:id="@+id/tv_profile_nav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_profile"
                style="@style/gray_9"
                android:includeFontPadding="false"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lv_more"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_3sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_more_nav"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/more_nav"/>

            <com.example.brainbuster.customfont.CustomTextViewMedium
                android:id="@+id/tv_more_nav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/more"
                style="@style/gray_9"
                android:includeFontPadding="false"/>

        </LinearLayout>


    </LinearLayout>

    <FrameLayout
        android:id="@+id/frame_full"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>